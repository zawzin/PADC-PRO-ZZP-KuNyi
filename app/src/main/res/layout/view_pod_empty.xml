<?xml version="1.0" encoding="utf-8"?>
<xyz.zzp.kunyi.components.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_data_placeholder"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_generic_no_data"
        android:layout_below="@id/ivEmpty"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/btn_refresh_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_refresh"
        android:layout_below="@id/tvEmpty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        />

</xyz.zzp.kunyi.components.EmptyViewPod>